<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:cardElevation="6dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="12dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        tools:ignore="MissingConstraints"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/post_title_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NIll"
                android:textColor="@android:color/black"
                android:layout_marginTop="30dp"
                android:textAlignment="center"
                android:textSize="28dp" />

            <TextView
                android:id="@+id/post_content_id"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="invisible"
                android:layout_below="@+id/post_title_id"

                android:text="NIll"
                android:textAlignment="center"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/post_published_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/post_content_id"
                android:text="NIll"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/post_im"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@+id/post_published_id"
                android:text="NIll"
                android:textAlignment="center"
                android:textSize="20dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>